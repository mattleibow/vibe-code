<?xml version="1.0" encoding="UTF-8" ?>
<Application x:Class="WaterIntakeApp.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WaterIntakeApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Water Intake App Colors -->
            <Color x:Key="WaterBlue">#1E88E5</Color>
            <Color x:Key="DeepWaterBlue">#0D47A1</Color>
            <Color x:Key="LightWaterBlue">#E3F2FD</Color>
            <Color x:Key="WaterGreen">#43A047</Color>
            <Color x:Key="WaterCyan">#00BCD4</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>